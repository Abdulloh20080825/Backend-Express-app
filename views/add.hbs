<div class="w-75 mx-auto">
  <h1>Add Product</h1>
  {{#if errorAddProducts}}
    <div class="alert text-center alert-danger alert-dismissible" role="alert">
      <strong>Error!</strong>
      {{errorAddProducts}}
    </div>
  {{/if}}
  <form action="/add-products" method="post">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        name="title"
        placeholder="title"
      />
      <label for="floatingInput">Title Product</label>
    </div>
    <div class="form-floating">
      <textarea
        class="form-control"
        placeholder="Description"
        name="description"
        id="floatingTextarea2"
        style="height: 100px"
      ></textarea>
      <label for="floatingTextarea2">Description</label>
    </div>
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control mt-3"
        id="floatingInput"
        name="image"
        placeholder="Image"
      />
      <label for="floatingInput">Image</label>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">$</span>
      <div class="form-floating">
        <input
          type="number"
          class="form-control"
          id="floatingInputGroup1"
          name="price"
          placeholder="Price"
        />
        <label for="floatingInputGroup1">Price</label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add products</button>
  </form>
</div>